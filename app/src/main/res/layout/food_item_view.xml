<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/food_card_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/food_card_margin"
    android:minWidth="180dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:contentPadding="@dimen/food_card_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/food_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/food_item_image_height"
            android:layout_centerHorizontal="true"
            tools:src="@drawable/punjabi_samosa" />


        <TextView
            android:id="@+id/food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_icon"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:minHeight="24dp"
            android:padding="5dp"
            android:textSize="24dp"
            tools:text="Food Name" />


    </RelativeLayout>
</android.support.v7.widget.CardView>